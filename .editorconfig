# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{h,c,cpp,lua,json,tmx,xml,vert,frag,geom}]
charset = utf-8
indent_style = space
indent_size = 4
